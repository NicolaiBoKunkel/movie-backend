# PostgreSQL Database
PG_ADMIN_USER="postgres"
PG_ADMIN_PASSWORD="postgres"
PGDATABASE="moviedb"
APP_DB_PW="backend_password"
ADMIN_DB_PW="admin_password"
SEEDER_DB_PW="seeder_password"

# PostgreSQL Connection (for application)
DATABASE_URL="postgresql://backend_user:backend_password@localhost:5432/moviedb?schema=public"
PGHOST="localhost"
PGPORT="5432"
PGUSER="backend_user"
PGPASSWORD="backend_password"

# pgAdmin
PGADMIN_DEFAULT_EMAIL="admin@example.com"
PGADMIN_DEFAULT_PASSWORD="admin"

# MongoDB
MON_HOST="sfu-mongodb"
MON_PORT="27017"
MON_USERNAME="mongouser"
MON_PASSWORD="mongopassword"
MON_DATABASE="moviedb"
MONGODB_URI="mongodb://mongouser:mongopassword@localhost:27018/moviedb?authSource=admin"

# Neo4j
NEO4J_AUTH="neo4j/neo4j_password"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="neo4j_password"
NEO4J_URI="bolt://localhost:7687"
NEO4J_HEAP_INITIAL_SIZE="512M"
NEO4J_HEAP_MAX_SIZE="2G"
NEO4J_PAGECACHE_SIZE="1G"

# Authentication
JWT_SECRET="your-secret-key-here-change-in-production"

# Server
PORT=5000
NODE_ENV=development

# CORS - comma-separated list of allowed origins
CORS_ORIGIN="http://localhost:3000"

# TMDB API (if using the frontend)
TMDB_API_KEY="your-tmdb-api-key"

# Frontend URLs
NEXT_PUBLIC_API_URL="http://localhost:5000"
