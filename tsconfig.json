{
  "compilerOptions": {
    /* Output structure */
  "rootDir": "./src",
    "outDir": "./dist",

    /* Runtime & modules */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node10",     // modern, non-deprecated
    "lib": ["ES2020"],
    "types": ["node"],

    /* Interop & ergonomics */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Build artifacts */
    "sourceMap": true,
    "declaration": false,

    /* Strictness & hygiene */
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,

    /* REQUIRED for TypeORM */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true

  /* Silence deprecation notices until v7 */
  /* removed invalid ignoreDeprecations setting to satisfy current tsc */
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/types"]
}
